# Server Configuration
PORT=3000

# Genies Chat API Tokens
# Replace with your actual Bearer token from the chat API
AUTH_TOKEN=your_access_token_here

# Optional: Refresh token for automatic token refresh
# If not provided, token refresh will be disabled
REFRESH_TOKEN=your_refresh_token_here

# Optional: Token refresh endpoint URL
# Defaults to https://api.genies.com/auth/v2/refresh-session
TOKEN_REFRESH_URL=https://api.genies.com/auth/v2/refresh-session

# Optional: Token refresh interval in minutes
# Defaults to 30 minutes
TOKEN_REFRESH_INTERVAL=30
